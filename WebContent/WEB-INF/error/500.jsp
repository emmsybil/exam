	color: red;
	border-right: 1px solid darkgrey;
}

.content-left span {
	font-size: 4em;
	margin-top: 100px;
}

.content-left p {
	font-size: 2.5em;
	font-weight: bold;
}

.content-right {
	width: 40%;
	height: 450px;
	float: right;
}

.content-right img {
	margin-top: 50px;
}

.content-right p {
	font-size: xx-large;
	font-style: italic;
}

.footer {
	width: 100%;
	height: 50px;
	padding: 20px;
	background-color: aliceblue;
	position: fixed;
	bottom: 0;
	text-align: center;
}

.footer a {
	color: -webkit-link;
}

