}

.header {
	width: 100%;
	height: 50px;
	margin-top: 15px;
	font-size: xx-large;
	font-family: sans-serif;
}

.header a {
	display: block;
	background: aliceblue;
	width: 150px;
	font-size: 0.7em;
	text-decoration: none;
	border-radius: 12px;
	background-color: gold;
	height: 40px;
